<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/send_btn_hover_color"> <!-- The ripple will be red -->

    <!-- the normal bg color will be light grey -->
    <item>
        <color android:color="@color/new_order_header_view_bg" />
    </item>

    <!-- make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/new_order_header_view_bg" />
        </shape>
    </item>

    <item
        android:left="@dimen/minus_two_dp"
        android:right="@dimen/minus_two_dp"
        android:top="@dimen/thirty_five_dp">
        <shape android:shape="line">
            <stroke
                android:width="@dimen/four_dp"
                android:color="@color/send_btn_hover_color" />
        </shape>
    </item>
</ripple>