<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingTop="@dimen/fifteen_dp"
        android:paddingStart="@dimen/fifteen_dp">


        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="Delivery by : "
                android:textColor="@color/dashboard_text_color"
                android:textSize="@dimen/text_dimen_10" />
            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/orders_header_bg" />


    <LinearLayout
        android:id="@+id/pharma_user_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/ten_dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_txt"
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="end"
                    android:background="@drawable/pharmacy_item_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="P"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_12" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/two_dp"
                    android:background="@drawable/progress_dotted_line"
                    android:contentDescription="@string/app_name"
                    android:hardwareAccelerated="false"
                    android:layerType="software" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apollo_phamrmacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_13" />

                <TextView
                    android:id="@+id/pharmacy_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:id="@+id/pickup_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_11" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/delivery_txt"
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="end"
                    android:background="@drawable/delivery_item_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_13" />

                <TextView
                    android:id="@+id/customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_11" />

                <TextView
                    android:id="@+id/customer_landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_dimen_11" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="@dimen/fifteen_dp"
        android:paddingTop="@dimen/eight_dp"
        android:paddingEnd="@dimen/fifteen_dp"
        android:paddingBottom="@dimen/eight_dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="@dimen/twenty_dp"
                    android:layout_height="@dimen/twenty_dp"
                    android:layout_gravity="center"
                    android:background="@drawable/new_order_delivery_item_bg"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_dimen_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/new_order_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="Vijay Bhaskar"
                    android:textColor="@color/new_order_bg"
                    android:textSize="@dimen/text_dimen_13" />

                <TextView
                    android:id="@+id/new_order_customer_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/three_dp"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="8-2-43, beside Ratna Super Market, SR Nagar, Hyderabad"
                    android:textColor="@color/new_order_bg"
                    android:textSize="@dimen/text_dimen_11" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider_view_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/order_item_header_divider_color" />


    <LinearLayout
        android:id="@+id/cancelled_reason_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dashboard_pending_text_color"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifteen_dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/five_dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_cancelled_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_regular"
            android:padding="@dimen/five_dp"
            android:text="Customer house door locked"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_dimen_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/eight_dp"
        android:background="@color/orders_header_bg" />
</LinearLayout>