<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/twelve_dp"
        android:background="@drawable/notification_message_item_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/child_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/notification_message_header_bg">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/five_dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_dimen_16"
                android:text="MESSAGE"/>

            <TextView
                android:id="@+id/new_message_text"
                android:layout_toEndOf="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_dimen_9"
                android:paddingStart="@dimen/two_dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingEnd="@dimen/two_dp"
                android:textColor="@color/colorWhite"
                android:background="@color/alert_header_bg"/>

            <TextView
                android:id="@+id/duration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_dimen_10"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerVertical="true"
                android:text="01:00min"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/five_dp"
            android:background="@drawable/notification_message_body_bg"
            android:paddingStart="@dimen/ten_dp"
            android:paddingEnd="@dimen/ten_dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="@dimen/text_dimen_14"
            android:paddingBottom="@dimen/ten_dp"
            android:text="Submit your latest photo in the head office by today evening"/>
    </LinearLayout>
</LinearLayout>