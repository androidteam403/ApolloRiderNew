<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/five_dp"
        android:paddingEnd="@dimen/five_dp"
        android:paddingTop="@dimen/seven_dp"
        android:paddingBottom="@dimen/seven_dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:layout_weight="0.5"
            android:text="Medicine name"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_12" />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_12" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            android:text="78.00"
            android:visibility="gone"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/medicine_divider_color"
        android:hardwareAccelerated="false"
        android:layerType="software" />
</LinearLayout>