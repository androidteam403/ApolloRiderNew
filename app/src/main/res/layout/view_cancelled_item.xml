<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/five_dp"
        android:paddingEnd="@dimen/five_dp"
        android:paddingTop="@dimen/five_dp"
        android:paddingBottom="@dimen/five_dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_cancelled_item_close"/>

            <TextView
                android:id="@+id/order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicine name"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/five_dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_dimen_11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/order_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_11" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="end"
            android:text="78.00"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_11" />

        <TextView
            android:id="@+id/item_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:gravity="end"
            android:fontFamily="@font/roboto_regular"
            android:text="78.00"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/view_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/cancel_order_divider_color"
        android:hardwareAccelerated="false"
        android:layerType="software" />
</LinearLayout>