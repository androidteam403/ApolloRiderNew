<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/one_dp"
            android:layout_weight="0.08"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_cart_order_list"
            android:textColor="@color/colorBlack"
            android:layout_weight="0.56"
            android:textSize="@dimen/text_dimen_16"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_qty"
            android:textAllCaps="true"
            android:layout_weight="0.17"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_16"
            android:fontFamily="@font/roboto_bold"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_total"
            android:textAllCaps="true"
            android:layout_weight="0.15"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_16"
            android:fontFamily="@font/roboto_bold"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchedItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grand_total_color"
        android:padding="@dimen/five_dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/twenty_dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_16"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginEnd="@dimen/five_dp"
            android:text="@string/label_grand_total"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_dimen_16"
            android:layout_marginEnd="@dimen/fifteen_dp"
            android:fontFamily="@font/roboto_bold"
            android:text="181.60"/>
    </LinearLayout>

    <TextView
        android:id="@+id/continue_btn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/add_cart_bg"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_bold"
        android:textSize="@dimen/text_dimen_15"
        android:text="Continue"/>
</LinearLayout>