<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/edit_text_textcolor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="splash_theme" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_fullhd</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextInputLayout" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/edit_text_textcolor</item>
        <item name="android:colorActivatedHighlight">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="hintTextAppearance">@font/roboto_regular</item>
        <item name="android:cacheColorHint">@color/colorWhite</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/edit_text_textcolor</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="hintTextAppearance">@font/roboto_regular</item>
        <item name="android:cacheColorHint">@color/colorWhite</item>
        <item name="android:colorActivatedHighlight">@color/colorWhite</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">@dimen/text_dimen_15</item><!-- text size in menu-->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/thirty_five_dp</item>
        <item name="listPreferredItemHeightSmall">@dimen/thirty_five_dp</item>

        <!--        &lt;!&ndash; item padding left in menu&ndash;&gt;-->
        <!--        <item name="android:listPreferredItemPaddingLeft">8dp</item>-->
        <!--        <item name="listPreferredItemPaddingLeft">8dp</item>-->

        <!--        &lt;!&ndash; item padding right in menu&ndash;&gt;-->
        <!--        <item name="android:listPreferredItemPaddingRight">8dp</item>-->
        <!--        <item name="listPreferredItemPaddingRight">8dp</item>-->
    </style>

    <style name="SwitchText">
        <item name="android:paddingLeft">8px</item>
        <item name="android:paddingBottom">8px</item>
        <item name="android:textColor">#FFeeFFee</item>
        <item name="android:textSize">24dip</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="otp_editText_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_dimen_15</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Theme.GuidelinesCompat.Light.DarkToolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">@dimen/five_dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="ChangePasswordEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="editTextColor">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorBlack</item>
        <item name="android:cacheColorHint">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorBlack</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_dimen_18</item>
    </style>

    <style name="fadeinandoutcustomDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/fadeinandoutDialogAnimation</item>
    </style>

    <style name="fadeinandoutDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_frag_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_frag_fade_out</item>
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <declare-styleable name="ZoomageView">
        <attr name="zoomage_zoomable" format="boolean" />
        <attr name="zoomage_translatable" format="boolean" />
        <attr name="zoomage_restrictBounds" format="boolean" />
        <attr name="zoomage_animateOnReset" format="boolean" />
        <attr name="zoomage_doubleTapToZoom" format="boolean" />
        <attr name="zoomage_doubleTapToZoomScaleFactor" format="float" />
        <attr name="zoomage_autoCenter" format="boolean" />
        <attr name="zoomage_minScale" format="float" />
        <attr name="zoomage_maxScale" format="float" />
        <attr name="zoomage_autoResetMode" format="enum">
            <enum name="UNDER" value="0" />
            <enum name="OVER" value="1" />
            <enum name="ALWAYS" value="2" />
            <enum name="NEVER" value="3" />
        </attr>
    </declare-styleable>
</resources>
